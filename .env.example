# ===========================================
# Jira Feedback Dashboard - Environment Config
# ===========================================
# Copy this file to .env and fill in your values

# ===================
# Database (PostgreSQL)
# ===================
DB_USER=jira_feedback
DB_PASSWORD=your_secure_password_here
DB_NAME=jira_feedback
DATABASE_URL=postgresql://jira_feedback:your_secure_password_here@localhost:5432/jira_feedback

# ===================
# Security
# ===================
# Secret key for JWT tokens - generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# Encryption key for storing Jira credentials - generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_key_here

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# Jira Connection (Default - users can configure their own)
# ===================
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_EMAIL=your.email@example.com
JIRA_API_TOKEN=your_jira_api_token
JQL=project = PROJ AND status in ("To Do", "In Progress")

# ===================
# LLM Configuration
# ===================
OPENAI_API_KEY=sk-your_openai_api_key
MODEL=gpt-4o-mini

# ===================
# Telegram Bot (Optional)
# ===================
# Create a bot with @BotFather on Telegram to get these
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook

# ===================
# Slack (Optional)
# ===================
SLACK_WEBHOOK_URL=

# ===================
# Frontend
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ===================
# Rubric Defaults
# ===================
MIN_DESCRIPTION_WORDS=20
REQUIRE_ACCEPTANCE_CRITERIA=true
ALLOWED_LABELS=bug,feature,enhancement,documentation
AMBIGUOUS_TERMS=optimize,ASAP,soon,quickly,improve,better,enhance,fix,update

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
