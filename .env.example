# Jira Configuration
JIRA_BASE_URL=https://yourcompany.atlassian.net
AUTH_METHOD=pat  # pat or oauth

# Personal Access Token (PAT) Authentication
JIRA_EMAIL=your.email@example.com
JIRA_API_TOKEN=your_api_token_here

# OAuth Authentication (alternative to PAT)
# JIRA_CLIENT_ID=your_client_id
# JIRA_CLIENT_SECRET=your_client_secret
# JIRA_TOKEN=your_oauth_token

# Query Configuration
JQL=project = ABC AND status in ("To Do","In Progress") ORDER BY updated DESC

# Feedback Configuration
FEEDBACK_MODE=comment  # comment or report
CACHE_DB_PATH=./.cache/jira_feedback.sqlite

# DSPy / LLM Configuration
MODEL=gpt-4o-mini  # or gpt-3.5-turbo, claude-3-haiku-20240307, etc.
OPENAI_API_KEY=your_openai_key_here  # if using OpenAI models

# Optional: Slack notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Rubric Configuration (optional)
# ALLOWED_LABELS=bug,feature,enhancement,documentation
# AMBIGUOUS_TERMS=optimize,ASAP,soon,quickly,improve,better
# MIN_DESCRIPTION_WORDS=20
# REQUIRE_ACCEPTANCE_CRITERIA=true
